{
  "port": 3001,
  "llm": {
    "provider": "claude",
    "model": "claude-sonnet-4-5-20250929",
    "api_key_env": "ANTHROPIC_API_KEY",
    "max_tokens": 300,
    "temperature": 0.7
  },
  "llm_alternatives": [
    {
      "provider": "gemini",
      "model": "gemini-2.5-flash",
      "api_key_env": "GEMINI_API_KEY",
      "max_tokens": 300,
      "temperature": 0.7
    }
  ],
  "llm_fallback": {
    "provider": "ollama",
    "model": "llama3.2",
    "base_url": "http://localhost:11434"
  },
  "memory": {
    "db_path": "./data/memory.db",
    "max_conversation_history": 20,
    "summarize_after_turns": 20
  },
  "behavior": {
    "max_llm_calls_per_minute": 10,
    "proactive_cooldown_seconds": 30,
    "idle_nudge_after_seconds": 120,
    "danger_alert_health_threshold": 6
  }
}
